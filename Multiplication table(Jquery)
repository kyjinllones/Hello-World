			$(document).ready(function(){


				var board=0, boards=[];
		$('#btn_num').click(function(){

		$('#multiplication').html('');

			board=$('#board').val();

temp_src=""
 for(var row=1; row <=board; row++){

 temp_src=$('<tr></tr>');
		 for(var col=1; col<=board; col++){

 			temp_src.append($('<td>'+ row*col+'</td>'));
 		}
 
 	$('#multiplication').append(temp_src);
 	
 	
 }

			})
	}) 




		
	


	


